<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@android:color/holo_blue_dark"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageViewClient"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_account_box_24dp"/>

        <TextView
            android:id="@+id/textViewNome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Jõao Silva"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/imageViewClient"
            android:layout_marginTop="8dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textViewEmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="joão@gmail.com"
            app:layout_constraintTop_toBottomOf="@+id/textViewNome"
            app:layout_constraintLeft_toRightOf="@+id/imageViewClient"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textViewCidade"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="barueri-SP"
            app:layout_constraintTop_toBottomOf="@+id/textViewEmail"
            app:layout_constraintLeft_toRightOf="@+id/imageViewClient"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textViewCep"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="06657-600"
            app:layout_constraintTop_toBottomOf="@+id/textViewCidade"
            app:layout_constraintLeft_toRightOf="@+id/imageViewClient"
            android:textStyle="bold"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>